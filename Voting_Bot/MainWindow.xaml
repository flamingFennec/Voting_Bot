<Window x:Class="Voting_Bot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Voting_Bot"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="20">
            <TextBlock Text="Voting bot" FontStyle="Italic" FontWeight="Bold" FontSize="34" HorizontalAlignment="Center"/>
            <TextBlock Text="(This uses FireFox)" FontStyle="Italic" FontSize="15" HorizontalAlignment="Center"/>
            <TextBox x:Name="InputBox" Text="Type URL here" Width="500" Height="30" />
            <TextBox x:Name="XPath_Code" Text="Type Option xPath here" HorizontalAlignment="Center" Width="500" Height="30" />
            <TextBox x:Name="Button_XPath" Text="Type Submit xPath here" HorizontalAlignment="Center" Width="500" Height="30" />
        </StackPanel>
        <Button x:Name="SubmitButton" Content="Submit" Click="SubmitButton_Click" Height="30" Width="400" Grid.Row="2"/>
    </Grid>

</Window>
